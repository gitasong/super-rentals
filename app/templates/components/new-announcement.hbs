{{#if addNewAnnouncement}}
  <h1>New Announcement</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="type">Type</label>
        {{input value=type id="type"}}
      </div>

      <div class="form-group">
        <label for="location">Location</label>
        {{input value=location id="location"}}
      </div>

      <div class="form-group">
        <label for="message">Message</label>
        {{input value=message id="message"}}
      </div>

      <button {{action 'saveAnnouncement'}}>Save Announcement</button>
    </form>
  </div>
{{else}}
  <button {{action 'announcementFormShow'}}>New Announcement</button>
{{/if}}
